<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc 
		http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/util 
		http://www.springframework.org/schema/util/spring-util-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- 引入配置文件 -->
	<import resource="classpath:conf/core/spring-context.xml" />
	<context:component-scan base-package="com.edaisong.admin.*" />
	<mvc:annotation-driven />
	<mvc:resources mapping="/**" location="/resources/" />
	<mvc:interceptors>
			<bean class="com.edaisong.admin.common.handler.GlobalLogInteceptor" />
	</mvc:interceptors>

	<!-- 全局异常 -->
<!-- 	<bean id="exceptionResolver" -->
<!-- 		class="com.edaisong.admin.common.handler.GlobalExceptionHandler" /> -->
		 
	<bean class="org.springframework.web.servlet.view.tiles3.TilesConfigurer">
		<property name="definitions">
			<list>
				<value>/WEB-INF/tile-defs/layout.xml</value>
			</list>
		</property>
	</bean>

	<bean class="org.springframework.web.servlet.view.tiles3.TilesViewResolver">
		<property name="order" value="1"></property>
	</bean>

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"></property>
		<property name="suffix" value=".jsp"></property>
		<property name="order" value="2"></property>
	</bean>
</beans>
