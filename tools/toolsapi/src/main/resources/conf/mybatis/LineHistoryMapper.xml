<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.edaisong.toolsapi.dao.inter.ILineHistoryDao" >
<!-- 添加一个上线记录 茹化肖 -->
   <insert id="addLineHistory" parameterType="com.edaisong.toolsentity.req.LineHistoryReq" >
	   insert into dbo.LineHistory
	        ( DevPlatform ,
	          OnLineProduct ,
	          DevVersion ,
	          OnLineTime ,
	          OnLineContent ,
	          Remark ,
	          CreateName,
	          OnLineProductCode,
	          DevPlatformCode
	        )
	values  (
				#{devPlatform,jdbcType=NVARCHAR},
				#{onLineProduct,jdbcType=NVARCHAR},
				#{devVersion,jdbcType=NVARCHAR},
				#{onLineTime,jdbcType=TIMESTAMP},
				#{onLineContent,jdbcType=NVARCHAR},
				#{remark,jdbcType=NVARCHAR},
				#{createName,jdbcType=NVARCHAR},
				#{onLineProductCode,jdbcType=INTEGER},
				#{devPlatformCode,jdbcType=INTEGER}
	        )
   </insert>
   <update id="deleteLineHistory" parameterType="com.edaisong.toolsentity.req.LineHistoryReq">
   		update dbo.LineHistory set IsEnable=0,ModifyTime=getdate(),ModifyName=#{modifyName,jdbcType=NVARCHAR} where id = #{id,jdbcType=INTEGER}
   </update>
   <update id="modifyLineHistory" parameterType="com.edaisong.toolsentity.req.LineHistoryReq">
   		update dbo.LineHistory set OnLineTime=#{onLineTime,jdbcType=TIMESTAMP},ModifyTime=getdate(),DevVersion=#{devVersion,jdbcType=NVARCHAR},OnLineContent=#{onLineContent,jdbcType=NVARCHAR},Remark=#{remark,jdbcType=NVARCHAR},ModifyName=#{modifyName,jdbcType=NVARCHAR} where id = #{id,jdbcType=INTEGER}
   </update> 
  <select id="getPageList" resultType="com.edaisong.toolsentity.LineHistory" parameterType="com.edaisong.toolsentity.req.PagedLineHistoryReq" statementType="CALLABLE">
{call Sp_CustomPage2015_V1(
		' Id desc ',
		' Id ,DevPlatform ,OnLineProduct ,DevVersion ,OnLineTime ,OnLineContent ,Remark ,CreateTime ,CreateName ,ModifyTime ,ModifyName ,IsEnable ',
		' dbo.LineHistory(nolock) ',
		'
		<include refid="queryWhere" />
		',
		#{pageSize,mode=IN,jdbcType=INTEGER},
		#{currentPage,mode=IN,jdbcType=INTEGER}
		,1,
		#{totalRecord,mode=OUT,jdbcType=INTEGER},
		#{totalPage,mode=OUT,jdbcType=INTEGER}
		)} 
  </select> 
  <sql id="queryWhere"> 
		1=1 and IsEnable=1  
		<if test="devPlatform != -1">
			and DevPlatformCode=${devPlatform}
		</if>
		<if test="onLineProduct != -1">
			and OnLineProductCode=${onLineProduct}
		</if>
	</sql>
</mapper>