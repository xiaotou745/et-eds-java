package etaoshi.api2;

import org.springframework.beans.factory.annotation.Autowired;

import com.edaisong.api.dal.model.BusinessBalanceRecord;
import com.edaisong.api.service.inter.ITestService;

import junit.framework.Test;
import junit.framework.TestCase;
import junit.framework.TestSuite;

/**
 * Unit test for simple App.
 */
public class AppTest 
    extends TestCase
{
    @Autowired
	private ITestService testService;
    
    /**
     * Create the test case
     *
     * @param testName name of the test case
     */
    public AppTest( String testName )
    {
    	testService.selectBusinessBalanceByID(9,"2015-1-1");
    	testService.addBusinessBalance(new BusinessBalanceRecord());
    	testService.deleteBusinessBalance(1541);
    	testService.updateBusinessBalance(new BusinessBalanceRecord());
        super( testName );
    }

    /**
     * @return the suite of tests being tested
     */
    public static Test suite()
    {
        return new TestSuite( AppTest.class );
    }

    /**
     * Rigourous Test :-)
     */
    public void testApp()
    {
        assertTrue( true );
    }
}
