package com.edaisong.admin;

import java.util.List;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.edaisong.api.dal.model.BusinessBalanceRecord;
import com.edaisong.api.service.inter.ITestService;

@Controller
@RequestMapping("order")
public class OrderController {
	 @Autowired
	 private ITestService testService;
	 
	@RequestMapping("list")
	public ModelAndView list(HttpServletRequest request, HttpServletResponse response){
		
		List<BusinessBalanceRecord> listData=testService.selectBusinessBalanceByID(9, "2015-1-1");
		
		ModelAndView model = new ModelAndView("orderlist");
		model.addObject("subtitle", "骑士管理");
		model.addObject("currenttitle", "骑士提现");
		model.addObject("viewPath", "order/list");
		return model;
	}
}
